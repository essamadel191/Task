@model IEnumerable<test3.Models.Book>
@using test3.Models;
@{
    
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
   

}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
