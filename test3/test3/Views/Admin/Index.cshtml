@Html.ActionLink("Add New Book", "Add_book",null, new { @class = "btn btn-default" })
@Html.ActionLink("Add New User", "Add_user", null, new { @class = "btn btn-default" })
<br />
<br />

<div class="row">
    @foreach (var item in Model)
    {

        <div class="col-sm-4">
            <div class="card" style="width:300px">
                <img class="card-img-top" style="width:100%" src="@Url.Content(item.book_img)" alt="Card image">
                <div class="card-body">
                    <h4 class="card-title" style="text-align:center">Title: @Html.DisplayFor(modelItem => item.book_title)</h4>
                    <p class="card-text" style="text-align:center">Author: @Html.DisplayFor(modelItem => item.book_author)</p>
                    <p class="card-text" style="text-align:center">Copies: @Html.DisplayFor(modelItem => item.copies)</p>

                    <!--
                        <a href="#" id="rent_btn" class="btn btn-primary" data-toggle="modal" data-target="#mymodel">Delete</a>
                    -->

                    @Html.ActionLink("Delete One", "Delete", new { id = item.book_id, num = 1 }, new { @class = "btn btn-danger", @style = "margin-left:15% ; margin-bottom:15px" })
                    @Html.ActionLink("Delete All", "DeleteAll", new { id = item.book_id }, new { @class = "btn btn-danger", @style = "margin-left:5% ;margin-bottom:15px" })

                </div>
            </div>
        </div>

